<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="btn_style" parent="QMUI.RoundButton">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="qmui_borderColor">?attr/colorAccent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/btn_margin</item>
    </style>
    <style name="tv_link_style" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/tv_height</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="tv_style" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tv_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/tv_color</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="et_style" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/et_radius_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_margin">@dimen/et_margin</item>
        <item name="android:paddingLeft">@dimen/et_padding</item>
        <item name="android:paddingRight">@dimen/et_padding</item>
        <item name="android:ems">10</item>
    </style>
    <style name="et_phone_style" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/et_radius_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_margin">@dimen/et_margin</item>
        <item name="android:paddingLeft">@dimen/et_padding</item>
        <item name="android:paddingRight">@dimen/et_padding</item>
        <item name="android:ems">10</item>
        <item name="android:maxLength">11</item>
        <item name="android:inputType">phone</item>
    </style>
    <style name="et_account_style" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/et_radius_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_margin">@dimen/et_margin</item>
        <item name="android:paddingLeft">@dimen/et_padding</item>
        <item name="android:paddingRight">@dimen/et_padding</item>
        <item name="android:ems">10</item>v
        <item name="android:maxLength">11</item>
        <item name="android:digits">@string/input_limit</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="et_password_style" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/et_radius_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_margin">@dimen/et_margin</item>
        <item name="android:paddingLeft">@dimen/et_padding</item>
        <item name="android:paddingRight">@dimen/et_padding</item>
        <item name="android:ems">10</item>
        <item name="android:maxLength">13</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="et_visible_password_style" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/et_radius_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_margin">@dimen/et_margin</item>
        <item name="android:paddingLeft">@dimen/et_padding</item>
        <item name="android:paddingRight">@dimen/et_padding</item>
        <item name="android:ems">10</item>
        <item name="android:maxLength">13</item>
        <item name="android:inputType">textVisiblePassword</item>
    </style>
    <style name="SwipeBackLayout">
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>
</resources>
